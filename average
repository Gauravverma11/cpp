#include <iostream>
using namespace std;

class Statistics
{
public:
    // Average of two integers
    double average(int a, int b)
    {
        return (a + b) / 2.0;
    }

    // Average of three floating-point numbers
    double average(float a, float b, float c)
    {
        return (a + b + c) / 3;
    }

    // Average of integer array
    double average(int arr[], int size)
    {
        int sum = 0;
        for (int i = 0; i < size; i++)
            sum += arr[i];

        return (double)sum / size;
    }
};

int main()
{
    Statistics s;

    // 1. Two integers
    int x, y;
    cout << "Enter two integers: ";
    cin >> x >> y;
    cout << "Average of two integers: "
         << s.average(x, y) << endl;

    // 2. Three floating-point numbers
    float a, b, c;
    cout << "\nEnter three floating-point numbers: ";
    cin >> a >> b >> c;
    cout << "Average of three floats: "
         << s.average(a, b, c) << endl;

    // 3. Integer array
    int size;
    cout << "\nEnter size of integer array: ";
    cin >> size;

    int arr[size];
    cout << "Enter " << size << " integers: ";
    for (int i = 0; i < size; i++)
        cin >> arr[i];

    cout << "Average of integer array: "
         << s.average(arr, size) << endl;

    return 0;
}
