#include <iostream>
using namespace std;

class TaxCalculator
{
public:
    // 1. For int income → flat 10%
    double calculateTax(int income)
    {
        return income * 0.10;
    }

    // 2. For int income and int age
    double calculateTax(int income, int age)
    {
        if (age < 60)
            return income * 0.10;
        else
            return income * 0.05;
    }

    // 3. For double income → 15%
    double calculateTax(double income)
    {
        return income * 0.15;
    }
};

int main()
{
    TaxCalculator tc;

    int choice;
    cout << "Choose option:\n";
    cout << "1. Tax for int income\n";
    cout << "2. Tax for int income and age\n";
    cout << "3. Tax for double income\n";
    cout << "Enter choice: ";
    cin >> choice;

    if (choice == 1)
    {
        int income;
        cout << "Enter income: ";
        cin >> income;

        cout << "Tax = " << tc.calculateTax(income) << endl;
    }
    else if (choice == 2)
    {
        int income, age;
        cout << "Enter income: ";
        cin >> income;
        cout << "Enter age: ";
        cin >> age;

        cout << "Tax = " << tc.calculateTax(income, age) << endl;
    }
    else if (choice == 3)
    {
        double income;
        cout << "Enter income: ";
        cin >> income;

        cout << "Tax = " << tc.calculateTax(income) << endl;
    }
    else
    {
        cout << "Invalid choice" << endl;
    }

    return 0;
}
