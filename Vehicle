#include <iostream>
using namespace std;

// ---------------- Base Class ----------------
class Vehicle
{
protected:
    int vehicleID;
    string brand;
    float price;

public:
    void inputDetails()
    {
        cout << "Enter Vehicle ID: ";
        cin >> vehicleID;

        cout << "Enter Brand: ";
        cin >> brand;

        cout << "Enter Price: ";
        cin >> price;
    }

    void displayDetails() const
    {
        cout << "Vehicle ID : " << vehicleID << endl;
        cout << "Brand      : " << brand << endl;
        cout << "Price      : â‚¹" << price << endl;
    }
};

// ---------------- Derived Class ----------------
class ElectricVehicle : public Vehicle
{
private:
    float batteryCapacity;   // in kWh
    float chargingTime;      // in hours

public:
    void inputEVDetails()
    {
        inputDetails();   // base class input
        cout << "Enter Battery Capacity (kWh): ";
        cin >> batteryCapacity;

        cout << "Enter Charging Time (hours): ";
        cin >> chargingTime;
    }

    void displayEVDetails() const
    {
        displayDetails(); // base class display
        cout << "Battery Capacity : " << batteryCapacity << " kWh" << endl;
        cout << "Charging Time    : " << chargingTime << " hours" << endl;
        cout << "----------------------------------" << endl;
    }

    float getBatteryCapacity() const
    {
        return batteryCapacity;
    }

    float getChargingTime() const
    {
        return chargingTime;
    }
};

// ---------------- Main Function ----------------
int main()
{
    const int SIZE = 3;
    ElectricVehicle vehicles[SIZE];

    cout << "\n--- Enter Electric Vehicle Details ---\n";
    for (int i = 0; i < SIZE; i++)
    {
        cout << "\nVehicle " << i + 1 << endl;
        vehicles[i].inputEVDetails();
    }

    cout << "\n--- All Electric Vehicles ---\n";
    for (int i = 0; i < SIZE; i++)
        vehicles[i].displayEVDetails();

    cout << "\n--- Vehicles with Battery > 50 kWh and Charging Time < 2 hours ---\n";
    for (int i = 0; i < SIZE; i++)
    {
        if (vehicles[i].getBatteryCapacity() > 50 &&
            vehicles[i].getChargingTime() < 2)
        {
            vehicles[i].displayEVDetails();
        }
    }

    return 0;
}
